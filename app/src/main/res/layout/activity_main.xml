<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mikhail.project2.MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/neighborhood_name"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/dollarOne"
        android:background="@drawable/selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="160dp"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:text="@string/one_dollar"
        android:textSize="33sp"
        android:textStyle="bold" />

    <TextView
        android:background="@drawable/selector"
        android:id="@+id/dollarTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp"
        android:layout_toEndOf="@+id/dollarOne"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:text="@string/two_dollars"
        android:textSize="33sp"
        android:textStyle="bold" />

    <TextView
        android:background="@drawable/selector"
        android:id="@+id/dollarThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp"
        android:layout_toEndOf="@+id/dollarTwo"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:text="@string/three_dollars"
        android:textSize="33sp"
        android:textStyle="bold" />

    <TextView
        android:background="@drawable/selector"
        android:id="@+id/dollarFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp"
        android:layout_toEndOf="@+id/dollarThree"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:text="@string/four_dollars"
        android:textSize="33sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/search_button"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120sp"
        android:text="@string/filter_price"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210sp"
        android:text="@string/filter_rating"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />


    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/header"
        android:layout_below="@+id/header"
        android:layout_marginTop="20dp"
        android:text="@string/clear_button_title"
        android:textSize="15sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="true"
        android:numStars="5"
        android:progressBackgroundTint="@android:color/darker_gray" />

    <TextView
        android:id="@+id/delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:text="@string/filter_delivery"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <TextView
        android:background="@drawable/selector"
        android:id="@+id/yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="350dp"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:text="@string/yes_delivery"
        android:textSize="33sp"
        android:textStyle="bold" />

    <TextView
        android:background="@drawable/selector"
        android:id="@+id/no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp"
        android:layout_toEndOf="@+id/yes"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:text="@string/no_delivery"
        android:textSize="33sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:text="@string/filter_your_search_header"
        android:textAppearance="?android:attr/textAppearanceMedium" />


</RelativeLayout>



